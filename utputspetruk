//construction
#include <iostream>

using namespace std;



class Mahasiswa
{
	public:
		string nama;
		string NPM;
		string Jurusan;
		double IPK;
		
		
		
		Mahasiswa (string inama,string iNPM,string iJurusan, double iIPK)
		{
			Mahasiswa::nama =inama;
			Mahasiswa::NPM =iNPM;
			Mahasiswa::Jurusan=iJurusan;
			Mahasiswa::IPK=iIPK;
		}
};



int main()
{
	
	Mahasiswa data1= Mahasiswa("Ghulam","2217051044","Ilmu Komputer",3.6);
	
	
	cout<<data1.nama <<endl;
	cout<<data1.NPM  <<endl;
	cout<<data1.Jurusan<<endl;
	cout<<data1.IPK  <<endl;
	
	
	
	
	
	return 0;
}



//io stream
#include <iostream>
#include <fstream>

using namespace std;

int main()
{
	
	ofstream outfile("example.txt");
	
	outfile << "Nama saya Ghulam ";
	
	outfile.close();
	
	
	return 0;
}

//io stream read
#include <iostream>
#include <fstream>

using namespace std;

int main()
{

string teks;

ifstream readfile("example.txt");

while(getline(readfile, teks))
{
	cout<<teks;
}

readfile.close();
}

